# Base Image: Official Kali Linux
FROM kalilinux/kali-rolling

# Non-interactive mode
ENV DEBIAN_FRONTEND=noninteractive

# --- JUGAAD AREA: Install EVERYTHING here ---
# جو ٹول آپ کو چاہیے، اس لسٹ میں اس کا نام لکھ دیں۔
# یہ پرماننٹ ہو جائے گا۔
RUN apt-get update && apt-get install -y \
    curl \
    git \
    wget \
    python3 \
    python3-pip \
    nodejs \
    npm \
    nano \
    vim \
    zip \
    unzip \
    net-tools \
    iputils-ping \
    nmap \
    sqlmap \
    dnsutils \
    whois \
    htop \
    neofetch \
    # اگر اور کوئی ٹول چاہیے تو یہاں اسپیس دے کر لکھ دیں
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Working Directory
WORKDIR /root

# Copy Project Files
COPY package.json .
RUN npm install

COPY . .

# Port
ENV PORT=3000
CMD ["node", "index.js"]
